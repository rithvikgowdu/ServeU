<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <!-- ðŸ”µ HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServeU"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Assistance System"
            android:textSize="14sp"
            android:textColor="#DBEAFE"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- ðŸ§¾ ROLE SELECTION CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/roleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue as"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:layout_marginBottom="16dp"/>

            <!-- ADMIN BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdmin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Admin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                app:cornerRadius="14dp"
                app:strokeWidth="2dp"
                app:strokeColor="#2563EB"
                app:backgroundTint="#DBEAFE"/>

            <!-- USER BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegularUser"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Regular User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="14dp"
                app:backgroundTint="#2563EB"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
